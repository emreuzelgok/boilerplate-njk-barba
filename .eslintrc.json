{
    "env": {
        "browser": true,
        "node": true,
        "es6": true
    },
    "extends": [
        "airbnb-base"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
        "no-param-reassign": "off",
        "no-console": "warn",
        "no-restricted-globals": "off",
        "no-plusplus": "off",
        "semi": [
            2,
            "never"
        ],
        "linebreak-style": "off"
    },
    "settings": {
        "import/resolver": {
            "alias": [
                [
                    "~",
                    "./scripts/"
                ],
                [
                    "@",
                    "./"
                ]
            ]
        }
    }
}